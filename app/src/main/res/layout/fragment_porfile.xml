<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".PorfileFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/p1"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Umair123"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:layout_marginTop="4dp"/>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginVertical="15dp"
                    android:layout_marginLeft="20dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        android:textSize="19dp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Posts"
                        android:textSize="17dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginVertical="15dp"
                    android:layout_marginHorizontal="15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="745"
                        android:textSize="19dp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Followers"
                        android:textSize="17dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:layout_marginVertical="15dp">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="600"
                        android:textSize="19dp"
                        android:textStyle="bold"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Following"
                        android:textSize="17dp"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:textStyle="bold"
                android:text="Edit Profile"
                android:background="@drawable/btn_profile_background"
                android:textSize="16sp"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Posts"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <include layout="@layout/vertical_line"/>

            <com.google.android.material.circularreveal.CircularRevealGridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="3"
                android:layout_marginTop="10dp">



                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p1"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p2"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p3"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p4"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p5"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p6"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p7"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p8"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p8"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p9"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p10"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p5"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p11"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p12"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p13"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p14"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p16"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p17"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/d1"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/d2"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/d3"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/d4"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/d5"
                    style="@style/search_item_style"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:src="@drawable/p5"
                    style="@style/search_item_style"/>




            </com.google.android.material.circularreveal.CircularRevealGridLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>





    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>